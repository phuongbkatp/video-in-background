<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/welcomeScreen"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">


    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:tint="@color/black"
        android:src="@drawable/icon_pulse"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="@font/dmsans_font"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="Step 1: Share"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:src="@drawable/intro1"
            android:layout_height="60dp" />

        <TextView
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="@font/dmsans_font"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="Step 2: Select"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:src="@drawable/intro2"
            android:layout_height="100dp" />

        <TextView
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="@font/dmsans_font"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="Step 3: Vibe"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_back"
            android:layout_width="200dp"
            android:layout_height="50dp">
            <TextView
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/dmsans_font"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="Next"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="13sp"
            android:fontFamily="@font/dmsans_font"
            android:textColor="@color/background"
            android:layout_width="match_parent"
            android:text="Same method goes for Spotify App. Beware of downloading copyrighted materials."
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>